<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="@drawable/common_white_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/common_dialog_message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dip"
        android:layout_marginTop="15dip"
        android:textColor="#ff353535"
    	android:layout_marginLeft="16dp"
    	android:layout_marginRight="16dp"
    	android:gravity="center"
    	android:minHeight="40dp"
        android:textSize="15sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#ffd6d6d6" />

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    >
	    <Button 
	        android:id="@+id/common_dialog_cancel"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="48dp"
	        android:text="@string/cancel"
	        android:textSize="15sp"
	        android:background="@null"
        	android:textColor="#ff353535"
        	android:gravity="center"
	        />
	    <View 
	        android:layout_width="0.5dp"
	        android:layout_height="match_parent"
	        android:background="#ffd6d6d6"
	        />
	    <Button 
	        android:id="@+id/common_dialog_ok"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="48dp"
	        android:text="@string/ok"
	        android:textSize="15sp"
	        android:background="@null"
        	android:textColor="#ffff6d4b"
        	android:gravity="center"
	        />
	</LinearLayout>

</LinearLayout>